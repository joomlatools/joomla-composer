{
    "name": "joomlatools/composer",
    "type": "composer-plugin",
    "license": "GPL-3.0-only",
    "description": "A Composer plugin to install Joomla extensions into your installation.",
    "keywords": ["joomla", "extension", "installer", "composer"],
    "homepage": "https://github.com/joomlatools/joomlatools-composer",
    "authors": [
        {
            "name": "Joomlatools",
            "email": "info@joomlatools.com",
            "homepage": "https://www.joomlatools.com"
        }
    ],
    "autoload": {
        "psr-0": {"Joomlatools\\": "src/"}
    },
    "extra": {
        "class": "Joomlatools\\Composer\\Plugin"
    },
    "require": {
        "composer-plugin-api": "^1.0"
    }
}
